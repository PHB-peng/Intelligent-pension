.content .dots {
  position: absolute;
  top: 220rpx;
  left: 50%;
  -webkit-transform: translate(-50% 0);
          transform: translate(-50% 0);
  z-index: 4;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.content .dots .dot {
  width: 24rpx;
  height: 8rpx;
  -webkit-transition: all .6s;
  transition: all .6s;
  background: rgba(0, 0, 0, 0.3);
  margin-right: 10rpx;
}
.content .dots .active {
  width: 24rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.8);
}
