.content {
  width: 100%;
  font-size: 28rpx;
}
.content image {
  width: 100%;
}
.content .commodity-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  width: 100%;
}
.content .commodity-list .commodity-item {
  width: 50%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 20rpx;
}
.content .commodity-list .commodity-item .commodity-img {
  width: 100%;
  position: relative;
  height: 380rpx;
}
.content .commodity-list .commodity-item .commodity-img .img {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate3d(-50%, -50%, 0);
          transform: translate3d(-50%, -50%, 0);
}
.content .commodity-list .commodity-item .commodity-img .firmName-box {
  position: absolute;
  top: 0rpx;
  line-height: 50rpx;
  background-color: rgba(0, 0, 0, 0.3);
  left: 0;
  width: 100%;
  color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .commodity-list .commodity-item .commodity-text {
  width: 100%;
}
.content .commodity-list .commodity-item .commodity-text .title {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.content .commodity-list .commodity-item .commodity-text .price_box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding-top: 15rpx;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content .commodity-list .commodity-item .commodity-text .price_box .c {
  color: #dadada;
}
.content .commodity-list .commodity-item .cart-box {
  overflow: hidden;
  position: relative;
  width: 100%;
  padding-top: 20rpx;
  height: 70rpx;
}
.content .commodity-list .commodity-item .cart-box .cart-icon {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 50rpx;
  height: 50rpx;
}
.content .commodity-list .commodity-item .cart-box .number-box {
  position: absolute;
  top: 20rpx;
  right: -200rpx;
  opacity: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.content .commodity-list .commodity-item .cart-box .number-box.on {
  opacity: 1;
  right: 70rpx;
}
.content .commodity-list .commodity-item .cart-box .number-box .number-sub,
.content .commodity-list .commodity-item .cart-box .number-box .number-num,
.content .commodity-list .commodity-item .cart-box .number-box .number-add {
  line-height: 50rpx;
  display: inline-block;
  min-width: 50rpx;
  text-align: center;
  border: 2rpx solid #ccc;
}
.content .commodity-list .commodity-item .cart-box .number-box .number-num {
  min-width: 60rpx;
  border-left-style: none;
  border-right-style: none;
}

